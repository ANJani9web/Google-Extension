{
  "manifest_version": 2,
  "name": "Weather and Pollution Extension",
  "version": "1.0",
  "description": "Displays weather report and pollution level with solutions.",
  "permissions": [
    "geolocation",
    "http://api.openweathermap.org/*",    
    "http://api.airvisual.com/*",
    "http://api.weatherapi.com/*"        
  ],
  "icons": {
    "128": "Images/logo.png"
  },
  "browser_action": {
    "default_icon": {
      "128": "Images/logo.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": ["styles.css"]
}
